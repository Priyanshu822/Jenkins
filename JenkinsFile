pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Using local Git repository'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
                bat 'npx playwright install'
            }
        }

        stage('Run Playwright BDD Tests') {
            steps {
                bat 'npm run test:headless'
            }
        }

        stage('Generate Report') {
            steps {
                bat 'npm run report'
            }
        }
    }

    post {
        always {
            publishHTML(target: [
                reportDir: 'reports',
                reportFiles: 'index.html',
                reportName: 'Playwright BDD Report'
            ])
        }
    }
}
